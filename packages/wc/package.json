{
  "name": "@social-embed/wc",
  "version": "0.1.0-next.13",
  "description": "A drop-in component for <o-embed> tags",
  "main": "./dist/OEmbedElement.umd.cjs",
  "module": "./dist/OEmbedElement.js",
  "typings": "./dist/OEmbedElement.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/OEmbedElement.js",
      "require": "./dist/OEmbedElement.umd.cjs"
    }
  },
  "scripts": {
    "prebuild": "pnpm clean && pnpm --filter @social-embed/lib build",
    "build": "vite build",
    "prepublishOnly": "pnpm build",
    "build:watch": "pnpm build --watch",
    "vite": "vite",
    "start": "pnpm vite",
    "clean": "rimraf dist/",
    "precheck": "pnpm --filter @social-embed/lib build",
    "check": "tsc --noEmit",
    "pretype-check": "pnpm --filter @social-embed/lib build",
    "type-check": "oxlint --type-check -A all --tsconfig tsconfig.json src",
    "type-check:tsc": "tsc --noEmit",
    "ncu": "ncu",
    "update": "ncu",
    "lint": "npm run lint:lit-analyzer && npm run lint:biome",
    "lint:biome": "biome lint .",
    "lint:lit-analyzer": "lit-analyzer -- --rules.no-boolean-in-attribute-binding off --rules.no-incompatible-type-binding off --rules.no-unknown-attribute off",
    "biome": "biome",
    "format": "pnpm run biome check . --write; pnpm run biome format . --write",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile ../site/custom-elements.json",
    "serve": "vite preview",
    "pretest": "pnpm --filter @social-embed/lib build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:headed": "vitest run --browser.headless=false",
    "test:browser-ui": "vitest --ui --browser.headless=false"
  },
  "keywords": [
    "web-component",
    "web-components",
    "lit-element",
    "lit",
    "typescript",
    "oembed",
    "o-embed"
  ],
  "author": "Tony Narlock <tony@git-pull.com> (https://tony.sh)",
  "license": "MIT",
  "homepage": "https://social-embed.org/",
  "bugs": {
    "url": "https://github.com/social-embed/social-embed/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/social-embed/social-embed"
  },
  "dependencies": {
    "@social-embed/lib": "workspace:*",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "chai": "^6.2.2",
    "deepmerge": "^4.3.1",
    "lit-analyzer": "^2.0.3",
    "playwright": "^1.58.1",
    "rimraf": "^5.0.7",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18",
    "web-component-analyzer": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
