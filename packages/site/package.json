{
  "name": "@social-embed/site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build --outDir build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "echo 'NOOP'",
    "ncu": "ncu",
    "update": "ncu",
    "lint": "biome lint .",
    "biome": "biome",
    "format": "pnpm run biome check . --write; pnpm run biome format . --write",
    "prebuild": "pnpm docs:oembed",
    "prestart": "pnpm docs:oembed",
    "prepare": "pnpm --filter @social-embed/wc build; mkdir -p public/js && cp ../wc/dist/OEmbedElement.umd.cjs public/js/o-embed.bundled.js",
    "docs:oembed": "[ ! -f ../wc/dist/OEmbedElement.umd.cjs ] && pnpm --filter @social-embed/wc build; mkdir -p public/js && cp ../wc/dist/OEmbedElement.umd.cjs public/js/o-embed.bundled.js"
  },
  "dependencies": {
    "@astrojs/react": "^4.1.2",
    "@astrojs/starlight": "^0.31.1",
    "@astrojs/starlight-docsearch": "^0.4.0",
    "@astrojs/starlight-tailwind": "^3.0.0",
    "@astrojs/tailwind": "^5.1.5",
    "@fontsource/ibm-plex-mono": "^5.2.6",
    "@fontsource/ibm-plex-sans": "^5.2.6",
    "@social-embed/lib": "workspace:*",
    "@social-embed/wc": "workspace:*",
    "astro": "^5.1.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-live": "^4.1.8",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2"
  }
}
