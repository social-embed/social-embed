{
  "name": "@social-embed/site",
  "version": "0.0.1-next.0",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start --port 8063",
    "build": "npm run clear && yarn workspace @social-embed/lib build && yarn workspace @social-embed/wc build && yarn workspace @social-embed/wc analyze && npm run docs:oembed && npm run docs:api && npm run docs:gen && npm run docs:assets && yarn typedoc",
    "docs:gen": "yarn docs:api && docusaurus build --out-dir dist",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve --dir dist --port 8062",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "docs:api": "yarn docs:api:fix; yarn typedoc",
    "docs:oembed": "rollup -c --file static/js/o-embed.bundled.js",
    "docs:assets": "cp ../../node_modules/prismjs/themes/prism-okaidia.css ./typedoc-style.css dist/",
    "lint": "echo 'NOOP'",
    "test": "echo 'NOOP'",
    "ncu": "ncu",
    "update": "ncu",
    "docs:api:fix": "",
    "docs:api:fix__deprecate": "rm ../wc/node_modules/@open-wc/semantic-dom-diff/chai-dom-diff.d.ts"
  },
  "dependencies": {
    "@docusaurus/core": "2.0.0-alpha.72",
    "@docusaurus/preset-classic": "2.0.0-alpha.72",
    "@docusaurus/theme-live-codeblock": "^2.0.0-alpha.72",
    "@mdx-js/react": "^1.6.22",
    "clsx": "^1.1.1",
    "docusaurus-plugin-typedoc": "^0.12.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.0.0-alpha.72",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.4.2",
    "@tsconfig/docusaurus": "^1.0.2",
    "@types/react": "^17.0.3",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.7",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typedoc": "^0.20.34",
    "typedoc-neo-theme": "^1.1.0",
    "typedoc-plugin-markdown": "^3.6.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
