{
  "name": "@social-embed/site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build --outDir build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "type-check": "astro check",
    "test": "vitest run",
    "test:watch": "vitest",
    "ncu": "ncu",
    "update": "ncu",
    "lint": "biome lint .",
    "biome": "biome",
    "format": "pnpm run biome check . --write; pnpm run biome format . --write",
    "prebuild": "pnpm docs:oembed",
    "prestart": "pnpm docs:oembed",
    "prepare": "pnpm --filter @social-embed/wc build; mkdir -p public/js && cp ../wc/dist/OEmbedElement.umd.cjs public/js/o-embed.bundled.js",
    "docs:oembed": "[ ! -f ../wc/dist/OEmbedElement.umd.cjs ] && pnpm --filter @social-embed/wc build; mkdir -p public/js && cp ../wc/dist/OEmbedElement.umd.cjs public/js/o-embed.bundled.js"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@astrojs/starlight": "^0.37.2",
    "@astrojs/starlight-docsearch": "^0.6.1",
    "@astrojs/starlight-tailwind": "^4.0.2",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@fontsource/ibm-plex-sans": "^5.2.8",
    "@social-embed/lib": "workspace:*",
    "@social-embed/wc": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.8",
    "codemirror": "^6.0.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-live": "^4.1.8",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@biomejs/biome": "^2.3.11",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "happy-dom": "^20.1.0",
    "vitest": "^4.0.16"
  }
}
