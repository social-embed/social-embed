{
  "name": "@social-embed/site",
  "version": "0.0.1-next.0",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "TYPEDOC_WATCH=true docusaurus start --port 8063",
    "prebuild": "npm run clean && yarn workspace @social-embed/lib build && yarn workspace @social-embed/wc build && yarn workspace @social-embed/wc analyze && npm run docs:oembed",
    "build": "TYPEDOC_WATCH=false docusaurus build --out-dir dist --no-minify",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clean:typegen": "rimraf -g './docs/**/api'",
    "clean": "yarn clean:typegen && docusaurus clear",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve --dir dist --port 8062",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "docs:oembed": "rollup -c --file static/js/o-embed.bundled.js",
    "lint": "echo 'NOOP'",
    "test": "echo 'NOOP'",
    "ncu": "ncu",
    "update": "ncu"
  },
  "dependencies": {
    "@docusaurus/core": "2.0.0-beta.0",
    "@docusaurus/preset-classic": "2.0.0-beta.0",
    "@docusaurus/theme-live-codeblock": "^2.0.0-beta.0",
    "@mdx-js/react": "^1.6.22",
    "clsx": "^1.1.1",
    "docusaurus-plugin-typedoc": "^0.14.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.14.0",
    "@docusaurus/module-type-aliases": "^2.0.0-beta.0",
    "@tsconfig/docusaurus": "^1.0.2",
    "@types/react": "^17.0.6",
    "@types/react-helmet": "^6.1.1",
    "@types/react-router-dom": "^5.1.7",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typedoc": "^0.20.36",
    "typedoc-neo-theme": "^1.1.1",
    "typedoc-plugin-markdown": "^3.8.1"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
