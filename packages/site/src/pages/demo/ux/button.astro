---
import { DemoLayout } from "../../../components/demo/DemoLayout";
import { DemoUxButton } from "../../../components/demo/DemoUxButton";
/**
 * Demo UX Button - Button styles including animated action buttons.
 * Uses BaseLayout instead of StarlightPage.
 */
import BaseLayout from "../../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Button"
  description="Button styles including animated action buttons"
  hideFooter
>
  <div class="demo-container">
    <DemoLayout currentPath="/demo/ux/button" client:only="react">
      <DemoUxButton client:only="react" />
    </DemoLayout>
  </div>
</BaseLayout>

<style>
  .demo-container {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
