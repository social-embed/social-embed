---
import { DemoLayout } from "../../../components/demo/DemoLayout";
import { DemoUxBrowse } from "../../../components/demo/DemoUxBrowse";
/**
 * Demo UX Components - Interactive components for buttons, toggles, and other UI elements.
 * Uses BaseLayout instead of StarlightPage.
 */
import BaseLayout from "../../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="UX Components"
  description="Interactive components for buttons, toggles, and other UI elements"
  hideFooter
>
  <div class="demo-container">
    <DemoLayout currentPath="/demo/ux" client:only="react">
      <DemoUxBrowse client:only="react" />
    </DemoLayout>
  </div>
</BaseLayout>

<style>
  .demo-container {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
