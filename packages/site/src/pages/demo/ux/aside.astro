---
import { DemoLayout } from "../../../components/demo/DemoLayout";
import AsideVariant from "../../../components/mdx/AsideVariant.astro";
/**
 * Demo page for Aside/Admonition style variants.
 * Shows all 5 variants (classic, refined, card, minimal, hybrid)
 * with each aside type (note, tip, caution, danger).
 */
import BaseLayout from "../../../layouts/BaseLayout.astro";

const variants = ["classic", "refined", "card", "minimal", "hybrid"] as const;
const types = ["note", "tip", "caution", "danger"] as const;

const variantDescriptions: Record<(typeof variants)[number], string> = {
  card: "Option B - Full bordered card with colored icon badge, no left border",
  classic: "Current production style - simple left border with flat background",
  hybrid:
    "Recommended - Left border + gradient + colored icon badge (best of refined + card)",
  minimal:
    "Option C - Top border only, uppercase title, ultra-subtle editorial style",
  refined:
    "Option A - Gradient background fading right + icon with subtle pill background",
};
---

<BaseLayout title="Aside Variants" description="Demo page for aside/admonition style variants" hideFooter>
  <div class="demo-wrapper">
    <DemoLayout currentPath="/demo/ux/aside" client:load>
      <div class="demo-container">
    <div class="demo-header">
      <h1>Aside / Admonition Variants</h1>
      <p class="demo-subtitle">
        Compare 5 styling approaches for callout components. Toggle dark/light
        mode and resize browser to test responsiveness.
      </p>
    </div>

    {
      variants.map((variant) => (
        <section class="variant-section">
          <div class="variant-header">
            <h2 class="variant-title">{variant}</h2>
            <p class="variant-desc">{variantDescriptions[variant]}</p>
          </div>

          <div class="aside-grid">
            {types.map((type) => (
              <AsideVariant variant={variant} type={type}>
                This is a <strong>{type}</strong> message. It provides important
                information to the reader with appropriate visual styling for
                the content type.
              </AsideVariant>
            ))}
          </div>
        </section>
      ))
    }
      </div>
    </DemoLayout>
  </div>
</BaseLayout>

<style>
  .demo-wrapper {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }

  .demo-container {
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  @media (min-width: 640px) {
    .demo-container {
      padding: 2rem 2rem;
    }
  }

  .demo-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .demo-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-slate-900);
    margin: 0 0 0.75rem 0;
  }

  :global([data-theme="dark"]) .demo-header h1 {
    color: var(--color-slate-100);
  }

  .demo-subtitle {
    color: var(--color-slate-600);
    font-size: 1rem;
    max-width: 40rem;
    margin: 0 auto;
  }

  :global([data-theme="dark"]) .demo-subtitle {
    color: var(--color-slate-400);
  }

  .variant-section {
    margin-bottom: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--color-slate-200);
  }

  :global([data-theme="dark"]) .variant-section {
    border-bottom-color: var(--color-slate-700);
  }

  .variant-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .variant-header {
    margin-bottom: 1.5rem;
  }

  .variant-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-slate-800);
    margin: 0 0 0.375rem 0;
    text-transform: capitalize;
  }

  :global([data-theme="dark"]) .variant-title {
    color: var(--color-slate-200);
  }

  .variant-desc {
    font-size: 0.875rem;
    color: var(--color-slate-500);
    margin: 0;
  }

  :global([data-theme="dark"]) .variant-desc {
    color: var(--color-slate-400);
  }

  /* Responsive grid for aside types */
  .aside-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .aside-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Reset margin on asides within the grid */
  .aside-grid :global(.aside) {
    margin: 0;
  }
</style>
