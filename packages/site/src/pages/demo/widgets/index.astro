---
import { DemoLayout } from "../../../components/demo/DemoLayout";
import { DemoWidgetsBrowse } from "../../../components/demo/DemoWidgetsBrowse";
/**
 * Demo Widgets - Browse embeddable widget components.
 * Uses BaseLayout instead of StarlightPage.
 */
import BaseLayout from "../../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Widgets"
  description="Embeddable components for testing and showcasing social-embed features"
  hideFooter
>
  <div class="demo-container">
    <DemoLayout currentPath="/demo/widgets" client:only="react">
      <DemoWidgetsBrowse client:only="react" />
    </DemoLayout>
  </div>
</BaseLayout>

<style>
  .demo-container {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
