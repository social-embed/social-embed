---
import { DemoLayout } from "../../../../components/demo/DemoLayout";
import { DemoWidgetsPlaygroundBrowse } from "../../../../components/demo/DemoWidgetsPlaygroundBrowse";
/**
 * Demo Widgets Playground - Browse playground widget components.
 * Uses BaseLayout instead of StarlightPage.
 */
import BaseLayout from "../../../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Playground Widgets"
  description="Compact playground widgets for testing embeds and URL transformations"
  hideFooter
>
  <div class="demo-container">
    <DemoLayout currentPath="/demo/widgets/playground" client:only="react">
      <DemoWidgetsPlaygroundBrowse client:only="react" />
    </DemoLayout>
  </div>
</BaseLayout>

<style>
  .demo-container {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
