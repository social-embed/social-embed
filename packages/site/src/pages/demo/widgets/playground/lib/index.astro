---
import { DemoLayout } from "../../../../../components/demo/DemoLayout";
import { LibPlayground } from "../../../../../components/lib-playground/LibPlayground";
/**
 * Demo Lib Playground Widget - Compact library playground for testing URL transformations.
 * Uses BaseLayout instead of StarlightPage.
 */
import BaseLayout from "../../../../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Lib Playground Widget"
  description="Compact library playground for testing URL transformations"
  hideFooter
>
  <div class="demo-container">
    <DemoLayout currentPath="/demo/widgets/playground/lib" client:only="react">
      <div class="flex h-full items-start justify-center overflow-auto p-4">
        <div class="w-full max-w-2xl">
          <LibPlayground
            client:only="react"
            mode="mini"
            className="rounded-lg border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-900"
          />
        </div>
      </div>
    </DemoLayout>
  </div>
</BaseLayout>

<style>
  .demo-container {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
