---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import { DemoLayout } from "../../../../../components/demo/DemoLayout";
import { LibPlayground } from "../../../../../components/lib-playground/LibPlayground";
---

<StarlightPage
  frontmatter={{
    title: "Lib Playground Widget",
    description: "Compact library playground for testing URL transformations",
    template: "splash",
    tableOfContents: false,
  }}
  hasSidebar={false}
>
  <div data-page="demo" class="not-content">
    <DemoLayout currentPath="/demo/widgets/playground/lib" client:only="react">
      <div class="flex h-full items-start justify-center overflow-auto p-4">
        <div class="w-full max-w-2xl">
          <LibPlayground
            client:only="react"
            mode="mini"
            className="rounded-lg border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-900"
          />
        </div>
      </div>
    </DemoLayout>
  </div>
</StarlightPage>

<style is:global>
  /* Reset Starlight layout for demo pages */
  body:has([data-page="demo"]) {
    .pagination-links,
    footer.sl-flex {
      display: none !important;
    }

    main,
    .content-panel,
    .main-pane,
    .sl-container,
    .sl-markdown-content {
      padding: 0 !important;
      margin: 0 !important;
      max-width: 100% !important;
    }

    .content-panel + .content-panel {
      border-top: none !important;
    }

    h1[id="_top"] {
      display: none !important;
    }
  }

  /* Demo fills viewport below header */
  [data-page="demo"] {
    position: fixed;
    top: calc(var(--sl-nav-height, 3.5rem) + 1px);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
