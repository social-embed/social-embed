---
import { DemoLayout } from "../../../../../components/demo/DemoLayout";
import { MiniPlayground } from "../../../../../components/playground/MiniPlayground";
/**
 * Demo WC Playground Widget - Compact web component playground with code editor, preview, and console.
 * Uses BaseLayout instead of StarlightPage.
 */
import BaseLayout from "../../../../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="WC Playground Widget"
  description="Compact web component playground with code editor, preview, and console"
  hideFooter
>
  <div class="demo-container">
    <DemoLayout currentPath="/demo/widgets/playground/wc" client:only="react">
      <div class="h-full p-4">
        <MiniPlayground client:only="react" className="h-full" />
      </div>
    </DemoLayout>
  </div>
</BaseLayout>

<style>
  .demo-container {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
