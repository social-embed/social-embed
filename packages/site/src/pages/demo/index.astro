---
import { DemoLayout } from "../../components/demo/DemoLayout";
import { DemoOverview } from "../../components/demo/DemoOverview";
/**
 * Demo Index - Overview of demo components.
 * Uses BaseLayout instead of StarlightPage.
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Demo"
  description="Explore UI components and patterns used in social-embed"
  hideFooter
>
  <div class="demo-container">
    <DemoLayout currentPath="/demo" client:only="react">
      <DemoOverview client:only="react" />
    </DemoLayout>
  </div>
</BaseLayout>

<style>
  .demo-container {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
