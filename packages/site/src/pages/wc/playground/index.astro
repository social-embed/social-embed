---
import { Playground as PlaygroundComponent } from "../../../components/playground/Playground";
/**
 * WC Playground - Interactive playground for testing web component.
 * Uses BaseLayout instead of StarlightPage.
 */
import BaseLayout from "../../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Playground"
  description="Interactive playground for testing social-embed components"
  hideFooter
>
  <div class="playground-container">
    <PlaygroundComponent client:only="react" />
  </div>
</BaseLayout>

<style>
  .playground-container {
    position: fixed;
    top: var(--nav-height);
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
</style>
