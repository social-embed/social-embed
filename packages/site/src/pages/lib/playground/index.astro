---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import { LibPlayground } from "../../../components/lib-playground/LibPlayground";
---

<StarlightPage
  frontmatter={{
    title: "Library Playground",
    description: "Interactive playground for testing @social-embed/lib functions",
    template: "splash",
    tableOfContents: false,
  }}
  hasSidebar={false}
>
  <div data-page="lib-playground" class="not-content">
    <div class="playground-container">
      <LibPlayground client:only="react" mode="full" className="playground-content" />
    </div>
  </div>
</StarlightPage>

<style is:global>
  /* Reset Starlight wrappers for lib playground page */
  body:has([data-page="lib-playground"]) {
    /* Hide pagination/footer */
    .pagination-links,
    footer.sl-flex {
      display: none !important;
    }

    /* Reset all Starlight container wrappers */
    main,
    .content-panel,
    .main-pane,
    .sl-container,
    .sl-markdown-content {
      padding: 0 !important;
      margin: 0 !important;
      max-width: 100% !important;
    }

    /* Remove the content-panel sibling border-top */
    .content-panel + .content-panel {
      border-top: none !important;
    }

    /* Hide page title */
    h1[id="_top"] {
      display: none !important;
    }
  }

  /* Playground container styling */
  .playground-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .playground-content {
    background: var(--sl-color-gray-6);
    border-radius: 0.5rem;
    padding: 1.5rem;
    border: 1px solid var(--sl-color-gray-5);
  }

  /* Light mode adjustments */
  :root:not([data-theme="dark"]) {
    .playground-container {
      .playground-content {
        background: var(--sl-color-gray-7);
        border-color: var(--sl-color-gray-5);
      }
    }
  }
</style>
