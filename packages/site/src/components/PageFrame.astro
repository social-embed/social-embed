---
/**
 * Custom PageFrame that provides minimal layout for playground page.
 * For playground: just header + content (no main-frame wrapper)
 * For all other pages: delegate to default Starlight PageFrame
 */
import Default from "@astrojs/starlight/components/PageFrame.astro";

const isPlayground =
  Astro.url.pathname === "/playground" || Astro.url.pathname === "/playground/";
---

{
  isPlayground ? (
    <div class="page sl-flex playground-layout">
      <header class="header">
        <slot name="header" />
      </header>
      <slot />
    </div>
  ) : (
    <Default {...Astro.props}>
      <slot name="header" slot="header" />
      <slot name="sidebar" slot="sidebar" />
      <slot />
    </Default>
  )
}

<style>
  @layer starlight.core {
    /* Playground-specific minimal layout */
    .playground-layout {
      flex-direction: column;
      min-height: 100vh;
    }

    .playground-layout .header {
      z-index: var(--sl-z-index-navbar);
      position: fixed;
      inset-inline-start: 0;
      inset-block-start: 0;
      width: 100%;
      height: var(--sl-nav-height);
      border-bottom: 1px solid var(--sl-color-hairline-shade);
      padding: var(--sl-nav-pad-y) var(--sl-nav-pad-x);
      background-color: var(--sl-color-bg-nav);
    }
  }
</style>
