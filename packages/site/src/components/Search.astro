---
import Default from "@astrojs/starlight/components/Search.astro";
---

<div class="flex flex-wrap items-start flex-start w-full gap-1 md:gap-3 lg:gap-5 p-3 lg:p-0">
  <!-- Web Component -->
  <div class="flex flex-col items-start">
    <a href="/wc" class="text-blue-600 hover:text-blue-500 dark:text-gray-100 dark:hover:text-blue-300 font-bold no-underline">
      <span class="block md:hidden">wc</span>
      <span class="hidden md:block lg:hidden">web component</span>
      <span class="hidden lg:block"><code>&lt;o-embed&gt;</code> component</span>
    </a>
    <span class="text-xs text-gray-600 dark:text-gray-400 hidden md:block no-underline">
      (<a href="/wc/playground" class="text-blue-600 hover:text-blue-500 dark:text-gray-100 dark:hover:text-blue-300 no-underline">Playground</a>,
      <a href="https://www.npmjs.com/package/@social-embed/wc" class="text-blue-600 hover:text-blue-500 dark:text-gray-100 dark:hover:text-blue-300 no-underline">NPM</a>)
    </span>
  </div>

  <!-- Library -->
  <div class="flex flex-col items-start">
    <a href="/lib" class="text-blue-600 hover:text-blue-500 dark:text-gray-100 dark:hover:text-blue-300 font-bold no-underline">
      <span class="block lg:hidden">lib</span>
      <span class="hidden lg:block">Library</span>
    </a>
    <span class="text-xs text-gray-600 dark:text-gray-400 hidden md:block">
      (<a href="/lib/playground" class="text-blue-600 hover:text-blue-500 dark:text-gray-100 dark:hover:text-blue-300 no-underline">Playground</a>,
      <a href="https://www.npmjs.com/package/@social-embed/lib" class="text-blue-600 hover:text-blue-500 dark:text-gray-100 dark:hover:text-blue-300 no-underline">NPM</a>)
    </span>
  </div>

  <!-- Playground -->
  <div class="flex flex-col items-start">
    <a href="/playground" class="text-blue-600 hover:text-blue-500 dark:text-gray-100 dark:hover:text-blue-300 font-bold no-underline">
      Playground
    </a>
  </div>
</div>

<div class="items-center w-full hidden lg:flex justify-end">
  <Default {...Astro.props}><slot /></Default>
</div>
