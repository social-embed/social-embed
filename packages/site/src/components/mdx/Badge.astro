---
/**
 * Badge component for inline labels.
 * Replaces @astrojs/starlight/components Badge.
 *
 * Usage:
 * <Badge text="New" variant="success" />
 * <Badge text="Deprecated" variant="caution" />
 */
interface Props {
  text: string;
  variant?: "note" | "tip" | "caution" | "danger" | "success" | "default";
  size?: "small" | "medium" | "large";
}

const { text, variant = "default", size = "small" } = Astro.props;
---

<span class:list={["badge", `badge-${variant}`, `badge-${size}`]}>
  {text}
</span>

<style>
  .badge {
    display: inline-block;
    border-radius: 9999px;
    font-weight: 500;
    white-space: nowrap;
  }

  /* Sizes */
  .badge-small {
    padding: 0.125rem 0.5rem;
    font-size: 0.75rem;
  }

  .badge-medium {
    padding: 0.25rem 0.625rem;
    font-size: 0.8125rem;
  }

  .badge-large {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
  }

  /* Variants */
  .badge-default {
    background: var(--color-slate-200);
    color: var(--color-slate-700);
  }

  [data-theme="dark"] .badge-default {
    background: var(--color-slate-700);
    color: var(--color-slate-200);
  }

  .badge-note {
    background: var(--color-mv-blue-light);
    color: var(--color-mv-blue-dark);
  }

  [data-theme="dark"] .badge-note {
    background: color-mix(in oklch, var(--color-mv-blue), transparent 80%);
    color: color-mix(in oklch, var(--color-mv-blue), white 30%);
  }

  .badge-tip {
    background: var(--color-mv-teal-light);
    color: var(--color-mv-teal-dark);
  }

  [data-theme="dark"] .badge-tip {
    background: color-mix(in oklch, var(--color-mv-teal), transparent 80%);
    color: color-mix(in oklch, var(--color-mv-teal), white 30%);
  }

  .badge-success {
    background: var(--color-mv-cyan-light);
    color: var(--color-mv-cyan-dark);
  }

  [data-theme="dark"] .badge-success {
    background: color-mix(in oklch, var(--color-mv-cyan), transparent 80%);
    color: color-mix(in oklch, var(--color-mv-cyan), white 30%);
  }

  .badge-caution {
    background: var(--color-mv-yellow-light);
    color: var(--color-mv-yellow-dark);
  }

  [data-theme="dark"] .badge-caution {
    background: color-mix(in oklch, var(--color-mv-yellow), transparent 80%);
    color: color-mix(in oklch, var(--color-mv-yellow), white 30%);
  }

  .badge-danger {
    background: var(--color-mv-red-light);
    color: var(--color-mv-red-dark);
  }

  [data-theme="dark"] .badge-danger {
    background: color-mix(in oklch, var(--color-mv-red), transparent 80%);
    color: color-mix(in oklch, var(--color-mv-red), white 30%);
  }
</style>
