---
/**
 * Starlight Header using Pure components.
 * Same header as homepage for consistent design across all pages.
 */
import CoreHeaderLayout from "./core/CoreHeaderLayout.astro";
import PureSearch from "./core/PureSearch.astro";
import PureSiteTitle from "./core/PureSiteTitle.astro";
import PureSocialIcons from "./core/PureSocialIcons.astro";
import PureThemeSelect from "./core/PureThemeSelect.astro";
---

<CoreHeaderLayout>
  <PureSiteTitle slot="logo" />
  <PureSearch slot="search" />
  <PureSocialIcons slot="social" />
  <PureThemeSelect slot="theme" />
</CoreHeaderLayout>
