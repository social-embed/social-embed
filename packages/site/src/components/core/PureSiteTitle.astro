---
/**
 * Pure Astro equivalent of Starlight's SiteTitle component.
 * Displays logo and site name, links to homepage.
 */
import logoSrc from "../../assets/img/logo.svg";
---

<a href="/" class="site-title">
  <img src={logoSrc.src} alt="" class="h-8 w-[2.93rem] max-w-full object-contain object-left" />
  <span class="title">social-embed</span>
</a>

<style>
  .site-title {
    display: flex;
    align-items: center;
    gap: var(--nav-gap, 1rem);
    font-weight: 600;
    color: var(--nav-text);
    text-decoration: none;
    white-space: nowrap;
    min-width: 0;
  }

  .title {
    font-size: 1.125rem;
    overflow: hidden;
  }

  /* Hide title on small screens */
  @media (max-width: 23rem) {
    .title {
      display: none;
    }
  }
</style>
