---
/**
 * Pure Astro equivalent of Starlight's SiteTitle component.
 * Displays logo and site name, links to homepage.
 */
import logoSrc from "../../assets/img/logo.svg";
---

<a href="/" class="site-title">
  <img src={logoSrc.src} alt="" class="logo" />
  <span class="title">social-embed</span>
</a>

<style>
  .site-title {
    display: flex;
    align-items: center;
    gap: var(--nav-gap, 1rem);
    font-weight: 600;
    color: var(--nav-text);
    text-decoration: none;
    white-space: nowrap;
    min-width: 0;
  }

  .logo {
    /* Fixed 32px height (Tailwind h-8 = 2rem) */
    height: 2rem;
    width: auto;
    max-width: 100%;
    object-fit: contain;
    object-position: 0 50%;
  }

  .title {
    font-size: 1.125rem;
    overflow: hidden;
  }

  /* Hide title on small screens */
  @media (max-width: 23rem) {
    .title {
      display: none;
    }
  }
</style>
