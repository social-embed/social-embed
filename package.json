{
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @social-embed/lib build && pnpm --filter @social-embed/wc build",
    "clean": "pnpm run -r clean",
    "distclean": "pnpm run -r distclean",
    "format": "pnpm run -r format",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "build:watch": "pnpm run -r build:watch",
    "test": "pnpm run -r test",
    "test:watch": "pnpm run -r test:watch",
    "ncu": "pnpm run ncu-local -u; pnpm run -r ncu",
    "ncu-local": "ncu",
    "update": "pnpm run -r update",
    "update:all": "ncu -u; pnpm -r --filter '@social-embed/*' run 'ncu' -u",
    "docs": "pnpm run -r docs",
    "docs:gen:watch": "pnpm run -r docs:gen:watch",
    "docs:serve": "pnpm run -r docs:serve",
    "serve": "pnpm run -r serve",
    "deduplicate": "npx --yes yarn-deduplicate yarn.lock"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4",
    "cross-env": "^7.0.3"
  }
}
