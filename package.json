{
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn workspace @social-embed/lib build && yarn workspace @social-embed/wc build",
    "format": "biome format .",
    "lint": "biome lint .",
    "clean": "yarn workspaces foreach --all run clean",
    "build:watch": "yarn workspaces foreach run --parallel build:watch",
    "distclean": "yarn workspaces foreach --all run distclean",
    "test": "yarn workspaces foreach --all run test",
    "test:watch": "yarn workspaces foreach --all --parallel run test:watch",
    "ncu": "yarn ncu-local -u; yarn workspaces foreach --all run ncu",
    "ncu-local": "ncu",
    "update": "yarn workspaces foreach --all run update",
    "docs": "yarn workspaces run docs",
    "docs:gen:watch": "yarn workspaces run docs:gen:watch",
    "docs:serve": "yarn workspaces run docs:serve",
    "serve": "yarn workspaces run serve",
    "deduplicate": "npx --yes yarn-deduplicate yarn.lock"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.2.2"
}
